{% from "helper/form_helper.html.j2" import render_field %}
{% extends "layout.html.j2" %} 
{% block content %}
<div class="card col-md-5 mt-3 p-3 mx-auto pb-4">
    <form method="POST" action="">
        {{ form.hidden_tag() }}
        <fieldset>
            <legend class="text-center">Welcome Back</legend>
            {{ render_field(form.email) }}
            {{ render_field(form.password) }}
            <div class="form-group row">
                <div class="offset-md-3 col-md-9 mt-2">
                    {{ form.remember(class="form-check-input") }}
                    {{ form.remember.label(class="form-check-label") }}
                </div>
            </div>
        </fieldset>
        <div class="form_group row mt-2">
            <div class="col-md-3 offset-md-3">
                {{form.submit(class="btn btn-outline-info col-md-12")}}
            </div>
            <div class="offset-md-3 col-md-9 mt-2 row">
                <small class="text-muted col-md-6 text-start p-0">
                    <a class="login-btn" href="{{url_for('reset_request')}}">Forgot Password?</a>
                </small>
                <small class="text-muted col-md-6 text-end p-0">
                    <a class="login-btn" href="{{url_for('register')}}">
                    Donâ€™t have an account?</a>
                </small>
            </div>
        </div>
    </form>
</div>
{% endblock content %}
