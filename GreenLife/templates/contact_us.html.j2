{% extends "layout.html.j2" %} 
{% block content %}
<section class="py-5 mt-2">
    <div class="container">
        <div class="text-center mb-5">
            <h1 class="section-title d-inline-block">Contact Us</h1>
            <p class="lead">We'd love to hear from you. Reach out to us with any questions or to schedule an appointment.</p>
        </div>
        <div class="row">
            <div class="col-lg-8 mx-auto">
                <div class="card shadow">
                    <div class="card-body">
                        <form>
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label for="name" class="form-label">Full Name</label>
                                    <input type="text" class="form-control" id="name" required>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label for="email" class="form-label">Email Address</label>
                                    <input type="email" class="form-control" id="email" required>
                                </div>
                            </div>
                            <div class="mb-3">
                                <label for="subject" class="form-label">Subject</label>
                                <input type="text" class="form-control" id="subject" required>
                            </div>
                            <div class="mb-3">
                                <label for="message" class="form-label">Message</label>
                                <textarea class="form-control" id="message" rows="5" required></textarea>
                            </div>
                            <button type="submit" class="btn btn-primary">Send Message</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Contact Info -->
<section class="py-5 bg-light">
    <div class="container">
        <div class="row">
            <div class="col-md-4 mb-4">
                <div class="contact-info text-center">
                    <i class="bi bi-geo-alt-fill contact-icon"></i>
                    <h4>Address</h4>
                    <p>123 Wellness Street, Colombo, Sri Lanka</p>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="contact-info text-center">
                    <i class="bi bi-telephone-fill contact-icon"></i>
                    <h4>Phone</h4>
                    <p>+94 11 234 5678</p>
                    <p>+94 77 123 4567</p>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="contact-info text-center">
                    <i class="bi bi-envelope-fill contact-icon"></i>
                    <h4>Email</h4>
                    <p>info@greenlifewellness.com</p>
                    <p>appointments@greenlifewellness.com</p>
                </div>
            </div>
        </div>
    </div>
</section>
{% endblock content %}