{% from "helper/modal_helper.html.j2" import delete_modal %}
{% extends "layout.html.j2" %} 
{% block content %}
<div class="col-md-9 mx-auto">
    <h3 class="mt-2">Service</h3>
    <div class="card">
        <div class="row m-1">
            <div class="col-md-3">
                <p>Name</p>
                <p>Description</p>
                <p>Type</p>
                <p>Date</p>
                <p>Created by</p>
            </div>
            <div class="col-md-9">
                <p> : {{service.name}}</p>
                <p> : {{service.description}}</p>
                <p> : {{service.service_type.name}}</p>
                <p> : {{service.date_created.strftime("%B %d, %Y")}}</p>
                <p> : {{service.user.full_name}}</p>
            </div>
        </div>
    </div>
    <div class="d-flex justify-content-end mt-2 gap-1">
        {% if service.user_service == current_user or current_user.role.name == 'admin' %}
        <a class="btn btn-outline-secondary" 
            href="{{url_for('update_service', service_id=service.id)}}">
            <i class="bi bi-pencil-fill"></i> Update
        </a>
        <button class="btn  btn-outline-secondary" 
            data-bs-toggle="modal" 
            data-bs-target="#deleteModal-{{service.id}}">
            <i class="bi bi-trash3-fill "></i> Delete
        </button>
        {{ delete_modal(service) }}
        {% endif %}
    </div>
</div>
{% endblock content %}